/* components/grid-item-bookface/grid-item-bookface.wxss */
.bookface-grid-item{
  width:202rpx;
  display: flex;
  flex-direction: column;

}
.bookface-grid-item-img{
  width: 100%;
  height:282rpx;
  background:grey;
}
.bookface-grid-item-title{
  width: 100%;
 font-size: 28rpx;
 font-weight: bold;
 white-space: nowrap;
 text-overflow: ellipsis;
 margin:10rpx 0 6rpx;
}

.rating-container {
  display: flex;
  flex-direction: row;
}
.rating-container image{
  height:24rpx;
  width:130rpx;
  background-position: center;
  background-size: cover;
  margin-right:5px;
}
.rating-container text{
  font-size: 26rpx;
  color:gray;
  line-height:20rpx;
  padding-left: 0 5rpx 0 5rpx;
}