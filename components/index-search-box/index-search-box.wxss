/* components/index-search-box/index-search-box.wxss */
.container{
  position:relative;
  height:400rpx;
  width:100%;
  padding:0;
  margin:0;
  background:gray;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  direction: column-reverse;
  z-index:2;
}

.searh-bar{
  height:80rpx;
  background:#fefefe;
  width: 650rpx;
  margin-bottom: 70rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.navigator-hover{

}

.search-icon{
  height:80rpx;
  width:80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-icon image{
  height:40rpx;
  width:40rpx;
  
}
.search-inplace{
  color:#989898;
  line-height:80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex:1;
}
.search-ensure{
  height:80rpx;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2d2d2d;
  border-radius: 0 10rpx 10rpx 0;
  font-size: 30rpx;
  color:white;
}

.swiper-pics{
  height:400rpx;
  position: absolute;
  width:100%;
  z-index:-1;
  background:#ffac2d;
}

.slider-image{
  width: 100%;
  height:400rpx;
}